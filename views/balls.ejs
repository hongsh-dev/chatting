<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ball game</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
        integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
</head>

<body>
    <%- include('nav.ejs') %>
        <div class="container mt-3">
            <h1>ball game</h1>
            <button id="btnCreate" class="btn btn-danger">new game</button>
            <button id="btnJoin" class="btn btn-danger">join game</button>
            <input type="text" id="txtGameId" />
            <div id="divPlayers"></div>
            <div id="divBoard"></div>
        </div>
        <script>
            //not good idea open websocket as soon as website is showed
            //websocket has been opend in port 9090
            let ws = new WebSocket("ws://localhost:9090");
            let clientId = null;
            let gameId = null;
            let playerColor = null;

            //new game button
            const btnCreate = document.getElementById("btnCreate");
            const btnJoin = document.getElementById("btnJoin");
            const txtGameId = document.getElementById("txtGameId");
            const divPlayers = document.getElementById("divPlayers");
            const divBoard = document.getElementById("divBoard");

            //wiring events

            //new game
            btnCreate.addEventListener("click", (e) => {
                const payLoad = {
                    method: "create",
                    clientId: clientId,
                };
                ws.send(JSON.stringify(payLoad));
            });

            //join
            btnJoin.addEventListener("click", (e) => {
                if (gameId === null) gameId = txtGameId.value;
                console.log(gameId);
                //console.log(txtGameId.value);
                const payLoad = {
                    method: "join",
                    clientId: clientId,
                    gameId: gameId,
                };
                ws.send(JSON.stringify(payLoad));
            });

            //receive a message from server
            ws.onmessage = (message) => {
                //message.data, the data sever has been sent
                const response = JSON.parse(message.data);

                //connect
                if (response.method === "connect") {
                    clientId = response.clientId;
                    console.log("client id has been set successfully : " + clientId);
                }

                //create
                if (response.method === "create") {
                    gameId = response.game.id;
                    console.log(
                        "game has been created with game id : " +
                        response.game.id +
                        " with " +
                        response.game.balls +
                        " balls"
                    );
                }

                //update
                if (response.method === "update") {
                    //{1: "red", 1}
                    if (!response.game.state) return;
                    for (const b of Object.keys(response.game.state)) {
                        const color = response.game.state[b];
                        const ballObject = document.getElementById("ball" + b);
                        ballObject.style.backgroundColor = color;
                    }
                }

                //join
                if (response.method === "join") {
                    const game = response.game;

